{
  "manifest_version": 3,
  "name": "AI Bookmark Manager",
  "version": "1.0.0",
  "description": "智能书签管理工具 - 使用 AI 自动分类、整理和搜索您的书签",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AI Bookmark Manager"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "save-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "快速保存当前页面为书签"
    },
    "open-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "打开书签侧边栏"
    }
  }
}
